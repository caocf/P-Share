<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >
    <!--编辑意见内容-->
    <EditText
        android:id="@+id/et_suggestion_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding12"
        android:layout_margin="@dimen/padding4"
        android:textSize="@dimen/text_size3"
        android:hint="@string/suggestion_content"
        android:gravity="top"
        android:editable="true"
        android:background="@drawable/suggestion_content_bg"        
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <!--提交-->
    <Button
        android:id="@+id/button_suggestion_submit"
        style="@style/button_style"
        android:text="@string/submit"/>	
</LinearLayout>
