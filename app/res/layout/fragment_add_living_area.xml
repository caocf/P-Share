<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical">

    <com.azhuoinfo.pshare.view.SearchEditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:background="@drawable/homepage_search_bg"
        android:hint="搜索您要选择的小区、泊车区"
        android:imeOptions="actionSearch"
        android:padding="8dp"
        android:textSize="13sp"
        android:singleLine="true"/>

    <com.azhuoinfo.pshare.view.PromptView
        android:id="@+id/promptView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ListView
        android:id="@+id/lv_parking_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_white">
    </ListView>

</LinearLayout>
