<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/settings_userGuide_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never" />

    <com.azhuoinfo.pshare.view.pager.CirclePageIndicator
        android:id="@+id/setting_userGuide_indicator_dot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:fillColor="@color/common_color_normal"
        app:pageColor="#ffffff"
        app:radius="6dp"
        app:strokeWidth="0dp" 
        />
    <LinearLayout
        android:id="@+id/ll_setting_userGuide_start"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center_horizontal"
        android:background="#77ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <Button
            android:id="@+id/setting_userGuide_start"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/padding4"
            android:background="@drawable/guide_button_image"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/actionbar_background"
            android:textSize="@dimen/text_size4"
            android:text="开启代泊新生活！"/>
    </LinearLayout>
	 <TextView
        android:id="@+id/setting_userGuide_skip"
       	android:background="@drawable/btn_grey_selector"
       	android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="@string/app_skip"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>