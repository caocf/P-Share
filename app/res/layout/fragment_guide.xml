<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:orientation="vertical" >

    <android.support.v4.view.ViewPager
        android:id="@+id/settings_userGuide_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:overScrollMode="never" />

    <com.azhuoinfo.pshare.view.pager.CirclePageIndicator
        android:id="@+id/setting_userGuide_indicator_dot"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        app:fillColor="@color/common_color_normal"
        app:pageColor="#ffffff"
        app:radius="4dp"
        app:strokeWidth="0dp" 
        />
    
    <Button
        android:id="@+id/setting_userGuide_start"
        style="@style/Common_Button.Reverse"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/app_enter"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/setting_userGuide_indicator_dot"
        android:layout_marginBottom="100dp"
        android:visibility="gone"
         />
	 <TextView
        android:id="@+id/setting_userGuide_skip"
       	android:background="@drawable/btn_grey_selector"
       	android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="@string/app_skip"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>
</RelativeLayout>