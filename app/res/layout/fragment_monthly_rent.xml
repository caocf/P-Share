    <RadioGroup
        android:id="@+id/rg_monthlyRent_group"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/padding9"         
         android:orientation="horizontal">      
             <RadioButton 
		        android:id="@+id/rb_monthlyRent_list"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_marginRight="@dimen/padding10"	            
	            android:layout_height="wrap_content"	            
	            android:button="@null"
	            android:textColor="#4682B4"
	            android:textSize="@dimen/text_size4"
	            android:background="#ffffff"	            
	            android:text="@string/rent"/>
             <RadioButton 
		        android:id="@+id/rb_monthlyRent_historylist" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_marginLeft="@dimen/padding10"	            
	            android:layout_height="wrap_content"	            
	            android:button="@null"
	            android:textColor="#DCDCDC"
	            android:textSize="@dimen/text_size4"
	            android:background="#ffffff"	            
	            android:text="@string/rb_monthlyRent_historylist"/>           
    </RadioGroup>
    <LinearLayout
        android:id="@+id/ll_monthlyRent_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding9"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_monthlyRent_list" 
            android:layout_height="@dimen/padding9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding2"
         	android:layout_marginRight="@dimen/padding2"         	
            android:background="#1376ca"/>
         <TextView
            android:id="@+id/tv_monthlyRent_historylist"
            android:layout_height="@dimen/padding9"
            android:layout_width="0dp"
            android:layout_weight="1"
         	android:layout_marginLeft="@dimen/padding2"
         	android:layout_marginRight="@dimen/padding2"
         	android:visibility="invisible"
            android:background="#1376ca"/>
    </LinearLayout>
     <android.support.v4.view.ViewPager
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/monthlyRent_pager"
           android:layout_below="@+id/line2_tv"/>
