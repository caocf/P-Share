<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:padding="@dimen/padding2"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/iv_car"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/padding2"
        android:layout_centerVertical="true"
        android:src="@drawable/p_share"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_car"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_parking_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="恒基大厦地下停车场"
            android:textSize="@dimen/text_size3"
            android:layout_marginLeft="@dimen/padding4"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/tv_parking_address"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="上海市黄浦区淮海东路99号"
            android:textSize="@dimen/text_size2"
            android:layout_toRightOf="@+id/iv_car"
            android:textColor="@color/text_light_gray"
            android:layout_marginLeft="@dimen/padding4"
            android:layout_centerVertical="true" />
    </LinearLayout>

    

</RelativeLayout>
