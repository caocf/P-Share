     <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding3"
        android:layout_marginRight="@dimen/padding3"
        android:layout_marginTop="@dimen/padding5"
        android:background="@drawable/registeractivity_linear_bg"
        android:orientation="vertical"
        >
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView1" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/phone"/>
            <TextView
                android:id="@+id/textView1" 
                android:layout_height="@dimen/padding4"
                android:layout_width="@dimen/padding10"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding2"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_gravity="center_vertical"
                android:background="#999d9c"/>          
             <EditText
		        android:id="@+id/loginActivity_editText_Phone"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="@dimen/padding2"
		        android:layout_toRightOf="@+id/textView1"
		        android:layout_centerVertical="true"
		        android:ems="10"
		        android:background="@drawable/registeractivity_search_bg"
		        android:layout_gravity="center_vertical"
		        android:hint="@string/phone_number" >
				<requestFocus />	       
		    </EditText>
		    <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/down_head"
                android:layout_marginRight="@dimen/padding2"/>
        </RelativeLayout>
        <TextView 
            android:layout_height="@dimen/padding10"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            android:background="#999d9c"
            android:layout_marginTop="@dimen/padding1"
            android:layout_marginBottom="@dimen/padding1"
            />       
	    <LinearLayout 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"/>
            <TextView 
                android:layout_height="@dimen/padding4"
                android:layout_width="@dimen/padding10"
                android:layout_marginLeft="@dimen/padding2"
                android:layout_gravity="center_vertical"
                android:background="#999d9c"/>
             <EditText
		        android:id="@+id/loginActivity_editText_Password"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="@dimen/padding2"
		        android:ems="10"
		        android:background="@drawable/registeractivity_search_bg"
		        android:layout_gravity="center_vertical"
				android:inputType="textPassword" 
		        android:hint="@string/password" >
				<requestFocus />	       
		    </EditText>
        </LinearLayout>       
		
    </LinearLayout>
     <Button
        android:id="@+id/login"
        style="@style/button_style"
        android:text="@string/login"
        />
     <RelativeLayout 
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_marginTop="@dimen/padding2"
	    >
		<TextView
		    android:id="@+id/loginActivity_forget_password" 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_alignParentLeft="true"
		    android:layout_marginLeft="@dimen/padding5"
		    android:layout_marginTop="@dimen/padding1"
		    android:layout_centerVertical="true"
		    android:textSize="@dimen/text_size3"
		    android:text="@string/forget_password"
		    />
		<LinearLayout
		    android:id="@+id/ll_LoginActivity_back_registerActivity" 
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:layout_alignParentRight="true"
		    >		    
		    <TextView 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="@string/registered"
		        android:textSize="@dimen/text_size3"
		        android:layout_gravity="center_vertical"
		        android:layout_toLeftOf="@+id/LoginActivity_back_registerActivity"
		        android:layout_marginRight="@dimen/padding2"/>
		    <ImageView
		        android:id="@+id/LoginActivity_back_registerActivity" 
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:layout_gravity="center_vertical"
		        android:layout_centerVertical="true"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="@dimen/padding4"
		        android:src="@drawable/back_doublehead"/>
		</LinearLayout>
	</RelativeLayout>

</LinearLayout>
