<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    android:orientation="horizontal" >
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/padding2">
        <TextView
            android:id="@+id/listitem_historyorder_fm_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size3"
            android:singleLine="true"
            android:text="合计"/> 
        <TextView
            android:id="@+id/listitem_fm_historyorder_address" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size2"
            android:textColor="#999d9c"
            android:singleLine="true"
            android:text="2568"/>
         <TextView
            android:id="@+id/listitem_fm_historyorder_time" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#999d9c"
            android:singleLine="true"
            android:textSize="@dimen/text_size2"
            android:text="2015/10/2 13:50"/>        
    </LinearLayout>
    <RelativeLayout 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="@dimen/padding2"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toLeftOf="@+id/iv_back">
        <TextView
            android:id="@+id/listitem_fm_historyorder_payment" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"         
            android:layout_alignParentRight="true"
            android:textColor="#999d9c"
            android:textSize="@dimen/text_size3"            
            android:text="已完成"/>
        <TextView
            android:id="@+id/listitem_fm_historyorder_paymentmoney" 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/padding3"
            android:layout_below="@+id/listitem_fm_historyorder_payment"
            android:layout_alignParentRight="true"
            android:textColor="#999d9c"
            android:textSize="@dimen/text_size3"
            android:text="已付款：20元"/>        
    </RelativeLayout>   
    <ImageView
        android:id="@+id/iv_back" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/padding3"
        android:layout_alignParentRight="true"
        android:src="@drawable/black_right_head"
        />
</RelativeLayout>
