<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
    android:gravity="center_vertical"
    android:divider="?android:dividerVertical"
    android:showDividers="middle"
              android:orientation="horizontal"
              android:padding="4dp">

    <LinearLayout
        android:id="@+id/park_item"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:text="玉兰花园"
            android:layout_weight="1"
            android:id="@+id/view_marker_name"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="18sp"/>

        <LinearLayout

            android:divider="?android:dividerVertical"
            android:showDividers="middle"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:orientation="horizontal">

            <TextView
                android:text="剩余车位：20"
                android:id="@+id/view_marker_num"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="@color/text_light_gray"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:textSize="12sp"/><!--
            <TextView
                android:id="@+id/view_marker_price"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:singleLine="true"
                android:layout_marginLeft="4dp"
                android:textColor="@color/text_light_gray"
                android:textSize="12sp"/>
-->
            <TextView
                android:text="距离：63千米"
                android:id="@+id/view_marker_distance"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/text_light_gray"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

<LinearLayout
    android:id="@+id/park_navigate"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <ImageView
        android:layout_weight="2"
        android:padding="2dp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/dh"
        android:background="@color/text_white"/>
    <TextView
        android:layout_weight="1"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:text="导航"
        android:textColor="@color/text_light_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>

</LinearLayout>
