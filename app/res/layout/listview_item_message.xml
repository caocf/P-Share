<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_item_message_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_listview_item_selector"
    android:descendantFocusability="beforeDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="8dp" >

    <com.azhuoinfo.pshare.view.imageview.round.RoundedImageView
                android:id="@+id/listview_item_message_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY"
                android:src="@drawable/ic_user_default"
                app:border_color="#f2f2f2"
                app:border_width="4dp"
                app:oval="true" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="top|left"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/listview_item_message_title"
            style="@style/Common_TextView_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:text="@string/test" />

        <TextView
            android:id="@+id/listview_item_message_content"
            style="@style/Common_TextView_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="@string/test" />
        <TextView
            android:id="@+id/listview_item_message_time"
            style="@style/Common_TextView_Hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="@string/test" />
    </LinearLayout>

</LinearLayout>