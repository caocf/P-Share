<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/fragment_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.azhuoinfo.pshare.view.PromptView
            android:id="@+id/promptView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <com.azhuoinfo.pshare.view.AllListView
            android:id="@+id/lv_mine_home_list"
            style="@style/Common_ListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_mine_home_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/text_white"
            android:gravity="center"
            android:padding="12dp"
            android:text="+ 添加"
            android:textColor="#999d9c"
            android:textSize="14sp"/>

    </LinearLayout>
</ScrollView>