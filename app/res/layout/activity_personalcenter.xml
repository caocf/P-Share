<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="@dimen/padding8"       
        android:background="@color/bg_action_bar_blue"
        >
        <ImageView
            android:id="@+id/activity_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding2"          
			android:src="@drawable/left_head"/>
        <TextView 
            style="@style/text_actionbar"
            android:text="@string/personal_center"/>
    </RelativeLayout>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/text_white">
        <RelativeLayout 
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/padding3"
            android:layout_marginBottom="@dimen/padding3">
            <RelativeLayout 
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/padding2"
                android:layout_toLeftOf="@+id/line">
                <ImageView
                    android:id="@+id/user_Head" 
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"		            
		            android:layout_centerInParent="true"
		            android:src="@drawable/userhead"/>
            </RelativeLayout>            
	        <TextView
	            android:id="@+id/line" 
	            android:layout_height="match_parent"
	            android:layout_width="@dimen/padding10"
	            android:layout_alignTop="@+id/layout_personalCenter"
	            android:layout_alignBottom="@+id/layout_personalCenter"
	            android:layout_toLeftOf="@+id/layout_personalCenter"
	             android:layout_centerVertical="true"
	            android:layout_marginRight="@dimen/padding1"
	            android:background="@color/rb_text_color_gray"/>
	        <LinearLayout
	            android:id="@+id/layout_personalCenter" 
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:layout_centerVertical="true"
	            android:layout_marginRight="@dimen/padding1"	            
	            android:layout_toLeftOf="@+id/iv_back"
	            android:orientation="vertical">
	            <TextView 
	                android:id="@+id/user_Name"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:textSize="@dimen/text_size3"
	                android:text="车先生"/>
	            <TextView 
	                android:id="@+id/user_ID"
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:textSize="@dimen/text_size3"
	                android:text="ID:123344"/>
	            <LinearLayout 
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:orientation="horizontal">
	                <TextView 
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:textSize="@dimen/text_size3"
		                android:text="积分： "/>
	                 <TextView 
		                android:id="@+id/user_Integration"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:textSize="@dimen/text_size3"
		                android:textColor="@color/text_points_yellow"
		                android:text="0"/>
	            </LinearLayout>
	            <LinearLayout 
	                android:layout_height="wrap_content"
	                android:layout_width="wrap_content"
	                android:orientation="horizontal">
	                <TextView	                 
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:textSize="@dimen/text_size3"
		                android:text="诚信分： "/>
	                <LinearLayout 
	                    android:layout_height="wrap_content"
	                    android:layout_width="wrap_content"
	                    android:orientation="horizontal">
	                    <TextView 
			                android:id="@+id/user_Integrity"
			                android:layout_height="wrap_content"
			                android:layout_width="wrap_content"
			                android:textSize="@dimen/text_size3"
			                android:text="8"/>
	                    <TextView 
			                android:id="@+id/user_Integrity2"
			                android:layout_height="wrap_content"
			                android:layout_width="wrap_content"
			                android:textSize="@dimen/text_size3"
			                android:textColor="@color/text_light_gray"
			                android:text="(余)"/>
	                     <TextView 
			                android:id="@+id/user_Integrity3"
			                android:layout_height="wrap_content"
			                android:layout_width="wrap_content"
			                android:textSize="@dimen/text_size3"
			                android:text="/"/>
                      <TextView 
		                android:id="@+id/user_Integrity4"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:textSize="@dimen/text_size3"
		                android:text="12"/>
                       <TextView 
		                android:id="@+id/user_Integrity5"
		                android:layout_height="wrap_content"
		                android:layout_width="wrap_content"
		                android:textSize="@dimen/text_size3"
		                android:textColor="@color/text_light_gray"
		                android:text="(满)"/>	 	                    
	                </LinearLayout>	                 
	            </LinearLayout>            
	        </LinearLayout>
	        <ImageView
	            android:id="@+id/iv_back" 
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/padding2"
                android:src="@drawable/black_right_head"/>
        </RelativeLayout>                    
    </LinearLayout>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/padding2"
        android:layout_marginBottom="@dimen/padding2"
        android:textColor="@color/text_light_gray"
        android:textSize="@dimen/text_size3"
        android:text="我的二维码："/>
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/text_white">
        <ImageView
            android:id="@+id/iv_QR_code" 
            android:layout_height="@dimen/padding12"
            android:layout_width="@dimen/padding12"
            android:layout_margin="@dimen/padding4"
            android:background="#ff00ff"
            android:src="@drawable/userhead"/>
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:textColor="@color/text_light_gray"
            android:layout_gravity="center_vertical"
            android:text="@string/qr_code_content"/>
    </LinearLayout>

</LinearLayout>
