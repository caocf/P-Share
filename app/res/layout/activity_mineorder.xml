<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8ff"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent" 
        android:layout_height="@dimen/padding8"       
        android:background="#1376ca"
        >
        <ImageView
            android:id="@+id/activity_back"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding2"          
			android:src="@drawable/left_head"
            />
        <TextView 
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
           	android:layout_centerInParent="true"
           	android:textSize="@dimen/text_size5" 
            android:text="我的预约/订单"/>
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/mineOrder_group" 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/padding9"         
         android:orientation="horizontal"
        >      
             <RadioButton 
		        android:id="@+id/rb_mineorder_order"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_marginRight="@dimen/padding10"	            
	            android:layout_height="wrap_content"	            
	            android:button="@null"
	            android:textColor="#4682B4"
	            android:textSize="@dimen/text_size4"
	            android:background="#ffffff"	            
	            android:text="预/订"/>                   
             <RadioButton 
		        android:id="@+id/rb_mineorder_historyorder" 
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:gravity="center"
	            android:layout_marginLeft="@dimen/padding10"	            
	            android:layout_height="wrap_content"	            
	            android:button="@null"
	            android:textColor="#DCDCDC"
	            android:textSize="@dimen/text_size4"
	            android:background="#ffffff"	            
	            android:text="历史订单"/>           
    </RadioGroup>
    <LinearLayout
        android:id="@+id/mineOrder_layout_line" 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding9"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_mineorder_order" 
            android:layout_height="@dimen/padding9"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/padding2"
         	android:layout_marginRight="@dimen/padding2"         	
            android:background="#1376ca"/>
         <TextView
            android:id="@+id/tv_mineorder_historyorder"
            android:layout_height="@dimen/padding9"
            android:layout_width="0dp"
            android:layout_weight="1"
         	android:layout_marginLeft="@dimen/padding2"
         	android:layout_marginRight="@dimen/padding2"
         	android:visibility="invisible"
            android:background="#1376ca"/>
    </LinearLayout>
     <android.support.v4.view.ViewPager
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/mineorder_pager"
           android:layout_below="@+id/line2_tv"/>
</LinearLayout>
