<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding8"
        android:background="@drawable/order_car_bg" />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/padding11"
        android:text="@string/tv1_order2"
        android:textSize="@dimen/text_size4"
        android:textColor="#c88400" />

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/tv1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="@dimen/padding1"
         android:text="@string/tv2_order2"
         android:textColor="#c88400"
         android:textSize="@dimen/text_size4" />
    <RelativeLayout
        android:id="@+id/rl_unselect_order"
        android:layout_height="@dimen/padding8"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/padding4"
        android:layout_marginRight="@dimen/padding4"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button"
        android:layout_marginBottom="@dimen/padding8">
        <TextView
            android:id="@+id/tv_unselect_order"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="@color/text_white"
            android:textSize="@dimen/text_size3"
            android:layout_centerInParent="true"
            android:text="@string/tv_unselect_order"/>
        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/tv_unselect_order"
            android:src="@drawable/iv_button_order"
            android:layout_marginRight="@dimen/padding1"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</RelativeLayout>