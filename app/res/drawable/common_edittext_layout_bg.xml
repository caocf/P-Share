<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/common_edittext_layout_bg" />
			<corners android:radius="2dp"/>
            <stroke android:width="1px" android:color="@color/common_edittext_layout_focus"></stroke>
            <padding android:left="8dp" android:right="8dp" android:top="6dp"  android:bottom="6dp"></padding>
        </shape>
     </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/common_edittext_layout_bg" />
			<corners android:radius="2dp"/>
            <stroke android:width="1px" android:color="@color/common_edittext_layout_normal"></stroke>
            <padding android:left="8dp" android:right="8dp" android:top="6dp"  android:bottom="6dp"></padding>
        </shape>
      
   </item>

</selector>