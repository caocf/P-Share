<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/common_edittext_normal" android:dashWidth="1dp" android:dashGap="0dp"></stroke>
			<solid android:color="#757575"/>
			<corners android:radius="4dp"/>
			<padding android:left="2dp" android:right="2dp" android:top="2dp"  android:bottom="2dp"></padding>
		</shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
              <stroke android:width="1px" android:color="@color/common_edittext_normal" android:dashWidth="1dp" android:dashGap="0dp"></stroke>
            <solid android:color="#eeeeee"/>
			<corners android:radius="4dp"/>
			<padding android:left="2dp" android:right="2dp" android:top="2dp"  android:bottom="2dp"></padding>
		</shape>
    </item>
    <item >
        <shape android:shape="rectangle">
              <stroke android:width="1px" android:color="@color/common_edittext_normal" android:dashWidth="1dp" android:dashGap="0dp"></stroke>
			<solid android:color="#f5f5f5"/>
			<corners android:radius="4dp"/>
			<padding android:left="2dp" android:right="2dp" android:top="2dp"  android:bottom="2dp"></padding>
		</shape>
    </item>
</selector>

