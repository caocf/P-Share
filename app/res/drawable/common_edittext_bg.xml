<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/common_edittext_bg" />
			<corners android:radius="4dp"/>
            <stroke android:width="1px" android:color="@color/common_edittext_focus"></stroke>
            <padding android:left="10dp" android:right="10dp" android:top="10dp"  android:bottom="10dp"></padding>
        </shape>
     </item>
    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/common_edittext_bg" />
			<corners android:radius="4dp"/>
            <stroke android:width="1px" android:color="@color/common_edittext_normal"></stroke>
            <padding android:left="10dp" android:right="10dp" android:top="10dp"  android:bottom="10dp"></padding>
        </shape>
      
   </item>

</selector>